.label-manage-label-detail-page {
  .crumbs-nav {
    display flex
    align-items center
    color #666
    &>* {
      cursor pointer
      &:hover {
        color #333
      }
      &:last-child {
        color #333
        cursor auto
      }
    }
  }

  .detail-content {
    box-sizing border-box
    background-color #fff
    padding 24px
    margin-top 20px
    .line-layout {
      display flex
      align-items center
      height 48px
      line-height 48px
      border-right 1px solid #E7EAEC
      &:nth-child(1) {
        .field-name, .field-value {
          border-top 1px solid #E7EAEC
        }
      }
    }
    .field-name {
      background-color #F5F7FA
      box-sizing border-box
      height 100%
      border 1px solid #E7EAEC
      border-top none
      width 187px
      padding-left 10px
      color #999
    }
    .field-value {
      color #666
      flex 1
      box-sizing border-box
      height 100%
      border-bottom 1px solid #E7EAEC
      display flex
      justify-content center
      align-items center
      overflow hidden
      &>span {
        display inline-block
        width 100%
        line-height 1.3em
        text-align center
        overflow hidden
        white-space nowrap
        text-overflow ellipsis
        &:hover {
          white-space normal
          overflow visible
        }
      }
      .el-textarea {
        height 100%
        textarea {
          width 100%
          height 100%
          text-align center
          padding 13px 10px 0
          border none
          box-sizing border-box
        }
      }
      &.hidden {
        font-size 0
        overflow hidden
      }
    }
  }
}