@import '~@style/variables';

.app-container {
	.desc {
		padding: 20px 16px;
		font-size: 14px;
		color: $fontDarkColor;
		letter-spacing: 0.1px;
		line-height: 21px;
	}

	.required {
		color: #f56c6c;
	}

	.condition-list {
		display: flex;
		padding: 20px 16px;

		&__item {
			margin-right: 30px;

			label {
				font-size: 14px;
				color: $fontDarkColor;
			}
		}
	}

	.btn {
		box-shadow: inset 0 1px 0 0 #E7EAEC;
		padding: 20px 16px;
		text-align: right;

		.analyze-btn {
			background-color: $commonGreen;
			border-color: $commonGreen;

			&:hover {
				background-color: lighten($commonGreen, 10%);
				border-color: lighten($commonGreen, 10%);
			}
		}
	}

	.chart-container {
		padding: 16px 20px;
	}

	.chart-card {
		margin-bottom: 16px;

		/deep/ .el-card__body {
			padding: 0;
		}
	}

	.knowledge-table {
		padding: 17px 18px 27px 40px;

		&__title {
			color: $fontDarkColor;
			margin-bottom: 10px;
		}

		/deep/ &__td {
			background-color: #faf7fa;
			color: $fontDefaultColor;
			font-size: 12px;
			padding: 7px 0;
		}

		/deep/ &__dd {
			color: $fontDefaultColor;
			font-size: 12px;
			padding: 0;
		}
	}
}
