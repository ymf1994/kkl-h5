@import('~@style/variables.styl')

.label-sheet-config-page {
  background-color #fff
  padding 50px 80px
  height 100%
  box-sizing border-box
  
  .search-result-table {
    tr.header-row th {
      background-color #F5F7FA!important
    }
    .operate-btn {
      display inline-block
      margin-right 10px
      cursor pointer
      color #999
      width 80px
      text-align center
      line-height 26px
      border-radius 4px
      border 1px solid #D5D8DE
      background-color #fff
      &.active {
        background-color $commonGreen
        color #fff
        border-color $commonGreen
      }
      &.disabled {
        border-color #ebeef5
        color #c0c4cc
        cursor not-allowed
      }
    }
  }

  .select-enum-label-dialog {
    .el-dialog {
      width 730px
      .el-input {
        width 240px
        margin-right 10px
      }
      .el-tabs {
        margin-top 20px
      }
      .el-tab-pane {
        height 200px
        overflow-y auto
      }
      .single-category-tags {
        display flex
        align-items center
        flex-wrap wrap
        margin-left -10px
        .item-tag {
          min-width 70px
          padding 0 2px
          text-align center
          line-height 32px
          background-color #F0F0F0
          border-radius 4px
          color #666
          margin-left 10px
          margin-top 10px
          cursor pointer
          &.disabled {
            border-color #ebeef5
            color #c0c4cc
            cursor not-allowed
          }
          &.selected {
            background-color $commonGreen
            color #fff
            cursor pointer
          }
        }
      }
    }
  }

  .select-nonenum-label-dialog {
    overflow hidden
    .el-dialog {
      width 730px
      max-height 92%
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      margin-top 0!important
      display flex
      flex-direction column
      &__body {
        flex 1
        padding-right 50px
        overflow auto
      }
    }
    .key-label-search-box {
      display flex
      align-items center
      .el-input {
        width 240px
      }  
    }
    .el-input, .el-select, .el-cascader {
      width 400px
    }
    .search-key-label {
      margin-left 10px
    }
    .key-label-list {
      margin-top 10px
    }
    .label-list {
      display flex
      align-items center
      flex-wrap wrap
      margin-left -10px
      .item-label {
        min-width 70px
        padding 0 2px
        text-align center
        line-height 32px
        background-color #F0F0F0
        border-radius 4px
        color #666
        margin-left 10px
        margin-top 10px
        cursor pointer
        &.selected {
          background-color $commonGreen
          color #fff
        }
      }
    }
  }

  .empty-label-config-dialog {
    .el-dialog {
      width 420px
    }
  }
}
