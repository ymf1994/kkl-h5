@import '~@style/variables';

.app-container {
	position: relative;

	.p-r-8 {
		padding-right: 8px;
	}

	.p-l-8 {
		padding-left: 8px;
	}

	.nav-tooltip {
		position: absolute;
		height: 46px;
		top: -66px;
		right: 0px;
		display: flex;
		align-items: center;
		color: $fontLightColor;
		font-size: 12px;
		cursor: pointer;

		&__icon {
			width: 16px;
			margin-right: 4px;
		}
	}

	.cell {
		padding: 20px 20px 20px 44px;
	}

	.select-ipt {
		margin-left: 20px;
	}

	.tips {
		font-size: 14px;
		color: $fontDarkColor;
		height: 40px;
		line-height: 40px;
		margin: 0 10px;
		border: none;
	}

	.upload {
		color: $commonGreen;
	}

	.btn {
		box-shadow: inset 0 1px 0 0 #E7EAEC;
		padding: 20px 16px;
		text-align: right;

		/deep/ .el-checkbox__input.is-checked .el-checkbox__inner {
			background-color: $commonGreen;
			border-color: $commonGreen;

			&:hover {
				border-color: $commonGreen;
			}
		}

		/deep/ .el-checkbox__input.is-checked+.el-checkbox__label {
			color: $fontDarkColor;
		}

		/deep/ .el-checkbox__input.is-focus .el-checkbox__inner {
			border-color: $commonGreen;

			&:hover {
				border-color: $commonGreen;
			}
		}
	}

	.chart-container {
		padding: 16px;
	}

	.tooltips {
		cursor: pointer;
		color: $commonGreen;
		font-size: 14px;

		.save {
			display: inline-block;
			margin-left: 20px;
		}
	}

	.compare-btn {
		color: $fontDarkColor;
		margin-right: 20px;
		font-size: 14px;
	}

	.analyze-btn {
		background-color: $commonGreen;
		border-color: $commonGreen;

		&:hover {
			background-color: lighten($commonGreen, 10%);
			border-color: lighten($commonGreen, 10%);
		}
	}

	.chart-card {
		margin-bottom: 16px;
		height: 260px;
		position: relative;

		/deep/ .el-card__body {
			padding: 0;
		}
	}
}

.config-list {
	margin-top: 10px;
	font-size: 14px;

	.warning {
		color: #DE116A;
		margin-bottom: 20px;
	}

	.tips {
		color: $fontDarkColor;
		margin-bottom: 20px;
	}

	.list {
		&__cell {
			display: flex;
			margin-bottom: 12px;

			.name {
				min-width: 80px;
				color: $fontDarkColor;
				margin-right: 10px;
			}

			.preview__icon, .delete__icon {
				width: 16px;
				height: 16px;
				cursor: pointer;
				margin-right: 7px;
			}
		}
	}
}
