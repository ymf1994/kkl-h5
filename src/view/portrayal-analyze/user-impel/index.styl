@import '~@style/variables';

.app-container {
	.p-r-8 {
		padding-right: 8px;
	}

	.p-l-8 {
		padding-left: 8px;
	}

	.desc {
		padding: 20px 16px;
		font-size: 14px;
		color: $fontDarkColor;
		letter-spacing: 0.1px;
		line-height: 21px;
	}

	.user-chart {
		height: 400px;
		box-shadow: 0 1px 0 0 #E7EAEC, inset 0 1px 0 0 #E7EAEC;
	}

	.chart-container {
		padding: 16px;
	}

	.chart-card {
		width: 100%;
		height: 260px;
		margin-bottom: 16px;

		/deep/ .el-card__body {
			padding: 0;
		}
	}
}
