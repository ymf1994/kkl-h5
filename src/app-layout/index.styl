.app {
	background-color: #f3f3f3;
	height: 100%;
	margin: 0 auto;

	&-main {
		overflow: visible;
		padding: 0;

		&>*:first-child {
			padding: 20px;
			box-sizing: border-box;
		}

		&-wrapper {
			width: 100%;
			height: 100%;
			overflow: auto;
			display: flex;
			flex-direction: column;
		}
	}

	&-wrapper {
		position: absolute;
		left: 0;
		top: 0;
		bottom: 0;
		right: 0;
	}
}
